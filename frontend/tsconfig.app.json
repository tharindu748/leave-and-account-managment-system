{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting - TEMPORARILY DISABLE FOR DEPLOYMENT */
    "strict": true,
    "noUnusedLocals": false,  // ← Change from true to false
    "noUnusedParameters": false,  // ← Change from true to false
    "erasableSyntaxOnly": false,  // ← Change from true to false
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src"],  // ← REMOVE "../backend/src/report"
  "exclude": ["node_modules", "dist", "**/backend/**", "../backend"]
}